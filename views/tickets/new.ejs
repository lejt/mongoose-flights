<%- include('../partials/header') %>

<div class="textBg purchaseTix">
    <h3 class="display-5">Select <i>Ticket</i> for Purchase:</h3>
    <hr>
    <form action="/flights/<%= flight._id %>/tickets" method="POST">
        <div class="d-flex justify-content-between">
            <div id="ticketSeat">
                <label>Seat Number:</label>
                <select name="seatAF">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                </select>
                <input type="number" name="seatNum" min="1" max="99" value="1" autocomplete="off">
            </div>
            <div id="ticketPrice">
                <label>Price of Ticket: $</label>
                <input type="number" name="price" min="1" max="1000000" value="1" step="0.01" autocomplete="off" required>
            </div>
        </div>
        <br><br>
        
        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit">Purchase</button>
        </div>
     
    </form>
</div>

<%- include('../partials/footer') %>